#pragma once
#include <vector>
#include <map>
#include "pozicija.h"
#include  "boje.h"

class Blok {

public:
	Blok();
	void Draw ();
	void Move(int red, int stupac);
	void Rotate();
	void RotateBack();
	int id;
	std::map <int, std::vector <Pozicija>> cells;
    std::vector<Color> boje;

    // return current block cells adjusted by current position
    std::vector<Pozicija> GetAbsoluteCells() const;

	int kretanjeRed;
	int kretanjeStupac;

private:
	int scelija;
	int srotacija; 
};