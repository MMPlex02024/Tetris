#include "blok.h"
#include "pozicija.h"

class LBlok : public Blok {
	public:
	LBlok() {
		id = 1; // ID za L blok
		cells = {
			scelija [0] = {Pozicija(0, 0), Pozicija(1, 0), Pozicija(2, 0), Pozicija(2, 1)},
			{1, {Pozicija(1, 0), Pozicija(1, 1), Pozicija(1, 2), Pozicija(0, 2)}},
			{2, {Pozicija(0, 0), Pozicija(0, 1), Pozicija(1, 1), Pozicija(2, 1)}},
			{3, {Pozicija(0, 0), Pozicija(0, 1), Pozicija(0, 2), Pozicija(1, 0)}}
		};
	}
		//  logika za L blok
	
};
